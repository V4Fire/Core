{
  "compilerOptions": {
    "baseUrl": ".",

    "target": "es5",
    "module": "commonjs",

    "esModuleInterop": true,
    "downlevelIteration": true,

    "lib": ["dom", "esnext"],
    "experimentalDecorators": true,
    "importHelpers": true,

    "allowJs": false,
    "skipLibCheck": false,

    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,

    "noImplicitOverride": true,
    "importsNotUsedAsValues": "error"
  },

  "typeAcquisition": {
    "exclude": ["node"]
  },

  "exclude": [
    "dist",
    "config",
    "node_modules",
    "**/*.spec.ts"
  ]
}
